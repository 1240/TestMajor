<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="4dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/li_main_image_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:minHeight="100dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_image_black_48dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/li_main_image_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/li_main_image_thumbnail"
                android:background="@color/colorPrimary"
                android:padding="@dimen/album_title_padding"
                android:textColor="@color/colorAlbumTitle"
                android:textSize="@dimen/album_title"
                tools:text="TITLE" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>